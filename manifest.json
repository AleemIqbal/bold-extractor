{
    "manifest_version": 2,
    "name": "emTagExtractor",
    "version": "1.0",
    "description": "Extracts text wrapped in <em> tags from the current web page and copies it to the clipboard.",
    "browser_action": {
      "default_icon": "icon.png",
      "default_popup": "popup.html"
    },
    "permissions": [
      "activeTab",
      "clipboardWrite"
    ],
    "icons": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["contentScript.js"]
      }
    ]
  }