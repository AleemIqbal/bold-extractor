{
  "manifest_version": 2,
  "name": "Google Bold Extractor",
  "version": "1.0",
  "description": "Extracts and copies em tags content from the current webpage",
  "icons": {
    "48": "icon.png"
  },
  "permissions": [
    "activeTab",
    "clipboardWrite"
  ],
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content_script.js"]
    }
  ]
}